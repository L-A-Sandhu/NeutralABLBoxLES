FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      fmm;
}
dimensions      [0 4 -4 0 0 0 0];

internalField   uniform 1;   // seed nonzero; model later bounds it away from 0 :contentReference[oaicite:1]{index=1}

boundaryField
{
    xMin    { type cyclic; }
    xMax    { type cyclic; }
    yMin    { type cyclic; }
    yMax    { type cyclic; }
    bottom  { type zeroGradient; }
    top     { type zeroGradient; }
}
